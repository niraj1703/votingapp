pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        sh '''
        docker build -t votingapp:latest .
        '''
      }
    }

    stage('Load Image into Minikube') {
      steps {
        sh '''
        minikube image load votingapp:latest
        '''
      }
    }

    stage('Terraform Init') {
      steps {
        dir('terraform') {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir('terraform') {
          sh 'terraform apply -auto-approve'
        }
      }
    }

    stage('Verify') {
      steps {
        sh '''
        kubectl get pods
        kubectl get svc
        kubectl get ingress
        '''
      }
    }
  }
}
